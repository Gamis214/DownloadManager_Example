<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s_hernandezivah.downloadmanager_example.MainActivity">

    <Button
        android:text="Descarga Jpg"
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnMusic"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.36" />

    <Button
        android:text="Descarga Mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btnMusic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Status"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btnImage"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btnCheckStatus" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Download"
        app:layout_constraintLeft_toRightOf="@+id/btnCheckStatus"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMusic"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
